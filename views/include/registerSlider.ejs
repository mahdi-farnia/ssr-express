<section
  class="hidden lg:block flex-1 bg-gradient-to-tl dark:from-emerald-900 from-emerald-300 dark:to-teal-600 to-teal-100"
>
  <div class="w-full h-full flex flex-col items-center">
    <div class="w-full flex-1 px-[12%] flex flex-col items-center justify-center">
      <ul class="w-full h-[50vh] relative" id="slides">
        <li class="slide -translate-y-[4.5rem] scale-[85%] opacity-0 pointer-events-none"></li>
        <li class="slide -translate-y-12 scale-90 opacity-50 pointer-events-none"></li>
        <li class="slide -translate-y-6 scale-95 opacity-50 pointer-events-none"></li>
        <li class="slide -translate-y-0 scale-100 opacity-100"></li>
        <li class="slide translate-y-6 scale-105 opacity-0 pointer-events-none"></li>
      </ul>
      <div class="w-full subtitle relative top-10" id="slide-description">
        <span class="w-full absolute leading-5 text-center transition-opacity duration-300"></span>
        <span class="w-full absolute leading-5 text-center transition-opacity duration-300"></span>
      </div>
    </div>
    <div class="w-full h-40 flex items-center justify-center pb-32">
      <button type="button" title="Previous Slide" id="slide-prev">&LeftArrow;</button>
      <div class="w-1/2 px-3 flex items-center justify-around" id="slide-dots"></div>
      <button type="button" title="Next Slide" id="slide-next">&rightarrow;</button>
    </div>
  </div>
</section>
